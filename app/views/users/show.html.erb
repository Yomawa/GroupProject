<div class="panel panel-default text-center" style="width:100%">
    <div class="panel-body">
      <h1 class="school_name_show">My Profile</h1>
    </div>
    <ul class="list-group">
        <li class="list-group-item">
            <div class="row text-left">
                <!-- <div class="col-md-1"></div> -->
                <div class="col-md-3 text-center">
                    <img src="<%= @user.picture %>" class="profilePicture">
                    <p class="header_firm"><%= @user.username %></p>
                    <p><span class="glyphicon glyphicon-envelope"></span>
                        <a href="mailto:<%= @user.email %>?Subject=Hello" target="_blank"><%= @user.email %></a>
                    </p>
                    <p>Contact: <%= @user.contact_link%></p>
                </div>
                <div class="col-md-9">
                    <blockquote>
                        <p class="text-left des_school"><%= @user.bio %></p>
                        <!-- <small>  -->
                            <cite class="user_title" title="<%= @user.contact_link %>">
                                <p>â€“<%= @user.username %></p>
                            </cite>
                       <!--  </small> -->
                    </blockquote>
                </div>
           <!--      <div class="col-md-1"></div>
            </div> -->
        </li>   
        <li class="list-group-item">
            <hr>
            <h3 class="reviews">My Reviews</h3>
            <% @user.reviews.each do |review| %>
                <div id="<%= review.id %>">
                <hr>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-2"></div>
                        <div class="col-md-8 title_reviews"><h4><%= review.title %></h4></div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">
                        <!-- <div class="col-md-1"></div> -->
                    <div class="col-md-3">
                        <img src="<%= review.school.logo %>" class="miniPicture"><br>
                        School: <%= review.school.name %>
                    </div>
                    <div class="col-md-9 text-justify review_des">
                        <%= review.description %>
                        <h4>Rating: <%= review.rating %></h4>
                    </div>
                    <div class="col-md-1"></div>
                    </div>
                    <!-- what's wrong with this edit delte button if you take this previous div or if adding div and if you do not refresh the page it doesn't update a style-->
                        <!-- <div class="text-right"> -->
                            <button class="button_right btn btn-info btn-xs userReviewEdit">Edit</button>
                            <button class="button_right btn btn-danger btn-xs userReviewDelete">Delete</button>
                            <!--   <%= link_to "Delete", review, method: :delete, data:{confirm: "Are you sure you want to delete this review?",class:"btn btn-default userDelete"}%> -->  
                        <!-- </div> -->
                </div>
            <% end %> 
        </li>
    </ul>
</div>


